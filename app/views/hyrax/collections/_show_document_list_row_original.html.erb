<% id = document.id %>
<tr id="document_<%= id %>">
  <td>
    <div class="media">
      <div class="media-body">
        <p class="media-heading">
          <strong><%= link_to document.title_or_label,
                              [main_app, document],
                              id: "src_copy_link#{id}",
                              class: "#{'document-title' if document.title_or_label == document.label} underline-link" %></strong>
        </p>
        <span><%= document.agency %></span>
      </div>
    </div>
  </td>
  <td class="text-center"><%= document.date_published %></td>
</tr>
